<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :home_country, '国名で検索' %>
  <%= f.select :home_country_eq ,Profile.home_countries, {include_blank: '----------'} %>
<br>
  <%= f.label :first_language_or_second_language, '言語で検索' %>
  <%= f.select :first_language_or_second_language_eq ,Profile.first_languages, {include_blank: '----------'} %>

  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Home country</th>
      <th>Home city</th>
      <th>First language</th>
      <th>Second language</th>
      <th>Introduction</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.icon.url %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.home_country %></td>
        <td><%= profile.home_city %></td>
        <td><%= profile.first_language %></td>
        <td><%= profile.second_language %></td>
        <td><%= profile.introduction %></td>
        <td><%= profile.user.name %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>

