<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :icon %>
    <%= form.file_field :icon %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%# <%= form.select :gender,Profile.genders.keys, {include_blank: '----------'}%> %>
    <%= form.collection_radio_buttons :gender, Profile.genders,:first, :first %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday, { include_blank: '----------', start_year: 1921, end_year: 2010} %>
  </div>

  <div class="field">
    <%= form.label :home_country %>
    <%= form.select :home_country,Profile.home_countries.keys, {include_blank: '----------'}%>
  </div>

  <div class="field">
    <%= form.label :home_city %>
    <%= form.select :home_city,Profile.home_cities.keys, {include_blank: '----------'}%>
  </div>

  <div class="field">
    <%= form.label :first_language %>
    <%= form.select :first_language,Profile.first_languages.keys, {include_blank: '----------'}%>
  </div>

  <div class="field">
    <%= form.label :second_language %>
    <%= form.select :second_language,Profile.second_languages.keys, {include_blank: '----------'}%>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
