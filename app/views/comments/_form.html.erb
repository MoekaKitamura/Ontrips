<!-- この記述がtripのshow画面に表示されるコメント入力欄になります -->
<%= form_with(model: [trip, comment]) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "件") %>のエラーが見つかりました</h2>
      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.text_area :content, :placeholder => "コメントをする（600字以内）" %>
  </div>
  <div class="actions">
    <%= form.submit "送信", class:"btntextchange"%>
  </div>
<% end %>